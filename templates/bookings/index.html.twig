{% extends 'base.html.twig' %}

{% block title %}Hello BookingsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<form action="/request" method="POST">
    <label for="date">Date:</label>
    <input type="date" name="date" value="2022-01-17" min="2022-01-01" max="2022-12-31">

    <label for="start-time">Start time:</label>
    <input type="time" name="startTime" min="01:00" max="20:00" required>

    <label for="end-time">End time:</label>
    <input type="time" name="endTime" min="04:00" max="24:00" required>
    <input type="submit" value="Reserve room">
</form>

{% endblock %}
